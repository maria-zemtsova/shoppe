{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["nuxt", "vite/client"],
    "strict": true,
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.vue", ".nuxt/types/**/*.d.ts", "types/**/*.ts"],
  "exclude": ["node_modules", ".nuxt", ".output", "dist"]
}
